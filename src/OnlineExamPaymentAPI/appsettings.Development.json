{
  "ConnectionStrings": {
    "OnlineExamDbContext": "Data Source=localhost;Initial Catalog=OEP_API_DB;Integrated Security=True;TrustServerCertificate=True;",
    "WriteDbContext": "Data Source=localhost;Initial Catalog=OEPWriteDB;Integrated Security=True;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JWTSettings": {
    "SecretKey": "YourSuperSecretKey_ChangeThisToARealSecureOne!123",
    "Issuer": "https://localhost:7293",
    "Audience": "https://localhost:7293",
    "TokenValidityInMinutes": 60,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": false,
    "ValidateIssuerSigningKey": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
